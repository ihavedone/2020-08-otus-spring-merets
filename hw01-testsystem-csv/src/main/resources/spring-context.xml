<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionDao" class="ru.otus.merets.dao.CsvQuestionDao">
        <constructor-arg name="resource" value="/questions.csv"></constructor-arg>
    </bean>

    <bean id="questionService" class="ru.otus.merets.service.QuestionServiceImpl">
        <constructor-arg name="questionDao" ref="questionDao"></constructor-arg>
    </bean>

    <bean id="testingService" class="ru.otus.merets.service.ConsoleTestingService">
        <constructor-arg name="questionService" ref="questionService"></constructor-arg>
    </bean>

</beans>